                        <script>
                            
                    
                            function updateReservationCount() {
                                const reservations = JSON.parse(localStorage.getItem("reservations")) || {
                                    "Freitag, den 14.02.2025 um 19:30 Uhr": 0,
                                    "Samstag, den 15.02.2025 um 18:00 Uhr": 0
                                };
                    
                                const availableTickets14 = MAX_TICKETS - reservations["Freitag, den 14.02.2025 um 19:30 Uhr"];
                                const availableTickets15 = MAX_TICKETS - reservations["Samstag, den 15.02.2025 um 18:00 Uhr"];
                    
                                document.getElementById("reservations-14-02-19-30").innerText = reservations["Freitag, den 14.02.2025 um 19:30 Uhr"];
                                document.getElementById("available-14-02-19-30").innerText = availableTickets14;
                    
                                document.getElementById("reservations-15-02-18-00").innerText = reservations["Samstag, den 15.02.2025 um 18:00 Uhr"];
                                document.getElementById("available-15-02-18-00").innerText = availableTickets15;
                            }
                    
                            document.getElementById("reservation-form").addEventListener("submit", function(event) {
                                event.preventDefault();
                    
                                const showTime = document.getElementById("show-time").value;
                                const tickets = parseInt(document.getElementById("tickets").value, 10);
                                const name = document.getElementById("name").value;
                                const email = document.getElementById("email").value;
                    
                                if (showTime && tickets && name && email) {
                                    let reservations = JSON.parse(localStorage.getItem("reservations")) || {
                                        "Freitag, den 14.02.2025 um 19:30 Uhr": 0,
                                        "Samstag, den 15.02.2025 um 18:00 Uhr": 0
                                    };
                    
                                    if (reservations[showTime] + tickets <= MAX_TICKETS) {
                                        reservations[showTime] += tickets;
                                        localStorage.setItem("reservations", JSON.stringify(reservations));
                                        updateReservationCount();
                                        alert("Reservierung erfolgreich gespeichert!");
                                    } else {
                                        alert("Es sind nicht genügend Plätze verfügbar.");
                                    }
                                } else {
                                    alert("Bitte alle Felder ausfüllen.");
                                }
                            });
                    
                            window.onload = updateReservationCount;
                        </script>
